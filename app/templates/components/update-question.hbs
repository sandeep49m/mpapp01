{{#if updateQuestionForm}}
<div class="new-question-box">
  <h3>Update This Question</h3>

  <form>
    <div class="form-group">
      <div class="row">
        <div class="col-xs-6">
          <label class="new-question-field" for="title">Question:</label>
        </div>
        <div class="col-xs-6">
          {{input class="new-question-field" value=content id="content" 
              placeholder=question.content}}
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-6">
          <label class="new-question-field" for="author">Name:</label>
        </div>
        <div class="col-xs-6">
          {{input class="new-question-field" value=author id="author" 
             placeholder=question.author}}
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-6">
          <label class="new-question-field" for="image">Avatar URL:</label>
        </div>
        <div class="col-xs-6">
          {{input class="new-question-field" value=image id="image" 
             placeholder=question.image}}
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-xs-6">
          <label class="new-question-field" for="note">Additional Notes:</label>
        </div>
        <div class="col-xs-6">
          {{textarea class="update-question-body" value=note id="note" 
             placeholder=question.note}}
        </div>
      </div>
    </div>

    <button {{action 'updateQuestion' question}}>Save Changes</button>
  </form>

</div>

{{else}}
  <button {{action 'updateQuestionForm'}} class="update-button">
      Update This Question</button>
{{/if}}